{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "include/",
                "-g",
                "-std=c++20",
                "-stdlib=libc++",
                "main.cpp",
                "display.cpp",
                "golp.cpp",
                "metaverse.cpp",
                "-o",
                "${fileDirname}/metaverse"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}